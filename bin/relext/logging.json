{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "logfile": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "results/logs/relation-extraction.log",
      "maxBytes": 52428800,
      "backupCount": 500,
      "encoding": "utf8"
    }
  },
  "loggers": {},
  "root": {
    "level": "DEBUG",
    "handlers": [
      "console",
      "logfile"
    ]
  }
}
